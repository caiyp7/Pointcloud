<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络/前台服务/唤醒锁 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 开机自启必须 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 前台服务（基础 + dataSync 类型，Android 14/15 建议声明类型） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Android 13+ 通知权限；否则前台服务通知可能发不出来 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- （可选）若你使用未解锁前启动路径，可考虑忽略电池优化；需配合代码请求白名单 -->
    <!-- <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" /> -->

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PointCloud"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 你的调试/手动启动 UI，保持不变 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ 开机广播接收器：拉起后台服务 -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">  <!-- 可选：允许未解锁前接收 -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 可选：若希望未解锁前就运行，加入这一条并在代码里处理 -->
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- ✅ 自启总控服务（前台）：在 onCreate 里启动 UdpToWebSocketService + GroundBridge.start(14600) -->
        <service
            android:name=".AutoStartService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync" />

        <!-- 你已有的 WS 服务；若它本身也作为前台服务运行，声明类型更稳 -->
        <service
            android:name="com.example.pointcloud.net.UdpToWebSocketService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            tools:ignore="ForegroundServicePermission" />
    </application>
</manifest>
